<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="club.quan9.hIsland.repository.UserRepository">

    <select id="getUserById" resultType="club.quan9.hIsland.domain.entity.User">
        select * from user where id = #{id}
    </select>

    <insert id="addUser" parameterType="club.quan9.hIsland.domain.entity.User">
        insert into user
        values (#{id},#{name},#{sex},#{hobby},#{phone},#{group},#{states})
    </insert>

</mapper>